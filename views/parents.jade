div(class="pull-right")
    a(href="/#/parent") Create Parent
table(class="table table-striped table-bordered")
    tr
        th Username
        th Name
        th Children
        th(colspan="2")
    tr( ng-repeat="parent in parents")
        td {{parent.user.username}}
        td {{parent.user.firstName}} {{parent.user.lastName}}
        td {{parent.children.length}}
        td(style="padding-right: 10px")
            a(href="/#/edit/parent/{{parent.id}}") edit
        td
            a(href="", ng-click="delete(parent.id)") delete


