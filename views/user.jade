form(name="userForm", ng-submit="submit()")
    label Username
    input(type="text", ng-model="user.username", name="uname", placeholder="required", required )

    label Password
    input(ng-model="user.password", type="password", name="pswd", placeholder="required", required )

    label Name
    input(type="text", ng-model="user.name", name="name", placeholder="required", required )

    label( class="checkbox")
        input(ng-model="user.admin", type="checkbox", name="admin" )
        span Admin

    label( class="checkbox")
        input(ng-model="user.facilityAdmin", type="checkbox", name="facilityAdmin" )
        span Facility Admin

    a(href="/#/users", class="btn") Cancel
    button(type="submit", class="btn btn-primary"){{buttonText}}