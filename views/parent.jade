form(name="parentForm", ng-submit="submit()")
    label Username
    input(type="text", ng-model="parent.user.username", name="uname", placeholder="required", required )

    label Password
    input(ng-model="parent.user.password", type="password", name="pswd", placeholder="required", required )

    label Name
    input(type="text", ng-model="parent.user.name", name="name", placeholder="required", required )

    div(class="btn-toolbar")
        a(href="/#/parents", class="btn") Cancel
        button(type="submit", class="btn btn-primary"){{buttonText}}